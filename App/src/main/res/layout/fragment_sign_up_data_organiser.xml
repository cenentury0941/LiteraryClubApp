<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.litfestapp.signup.SignUpDataOrganiser">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:cardElevation="0dp"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            >

            <TextView
                android:id="@+id/Login_Sign_Up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Organizer Data"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:textSize="24sp"
                android:fontFamily="monospace"
                />

            <LinearLayout
                android:id="@+id/Login_Sign_UpOrganizer_Fname_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Login_Sign_Up"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/Login_Sign_Up__Organizer_FName_Message"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="First Name : "
                    android:textColor="#000000"
                    android:layout_marginTop="32dp"
                    android:textSize="18sp"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/Login_Sign_Up_Organizer_FName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toBottomOf="@id/Login_Sign_Up"
                    android:hint="First Name"
                    android:textColor="#000000"
                    android:layout_marginTop="32dp"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Login_Sign_UpOrganizer_Lname_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Login_Sign_UpOrganizer_Fname_Layout"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Login_Sign_Up_Organizer_LName_Message"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toBottomOf="@id/Login_Sign_UpOrganizer_Fname_Layout"
                    android:text="Last Name : "
                    android:textColor="#000000"
                    android:layout_marginTop="32dp"
                    android:textSize="18sp"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical"
                    />

                <EditText
                    android:id="@+id/Login_Sign_Up_Organizer_LName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toBottomOf="@id/Login_Sign_UpOrganizer_Fname_Layout"
                    android:hint="Last Name"
                    android:textColor="#000000"
                    android:layout_marginTop="32dp"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/Login_Sign_Up_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#993200"
                android:text="SIGN UP"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@+id/Login_Sign_UpOrganizer_Lname_Layout"
                android:layout_marginTop="32dp"
                />


            <View
                android:id="@+id/Login_Divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/Login_Sign_Up_Button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="#393939"
                android:layout_marginVertical="32dp"
                android:layout_marginHorizontal="32dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>




</FrameLayout>