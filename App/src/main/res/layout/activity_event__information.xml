<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginbackground"
        android:scaleType="fitXY"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="10dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/home_background"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="164dp"
                        android:id="@+id/home_whitebox"
                        android:background="#FFFFFF"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        android:layout_marginTop="192dp"
                        android:layout_marginBottom="10dp"
                        />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/event_logo_card"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.6"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:cardElevation="10dp"
                        >
                        <ImageView
                            android:id="@+id/event_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/nav_header_desc"
                            app:srcCompat="@mipmap/ic_launcher_white"
                            android:scaleType="fitXY"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/event_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Name"
                        android:textColor="#000000"
                        android:textSize="24dp"
                        app:layout_constraintTop_toBottomOf="@id/event_logo_card"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0.1"
                        />

                    <TextView
                        android:id="@+id/event_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="393-939"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        app:layout_constraintTop_toBottomOf="@id/event_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/event_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DD/MM/YY - DD/MM/YY"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        app:layout_constraintTop_toBottomOf="@id/event_id"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_marginTop="5dp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="16dp"
                    >

                    <TextView
                        android:id="@+id/Event_About_Heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="About the Event"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"
                        android:textSize="24sp"
                        />

                    <TextView
                        android:id="@+id/Event_About_Message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/Event_About_Heading"
                        android:text="Stuff explaining what the event is and other generic stuff.Stuff explaining what the event is and other generic stuff.Stuff explaining what the event is and other generic stuff.Stuff explaining what the event is and other generic stuff."
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        />


                    <View
                        android:id="@+id/Login_Divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/Event_About_Message"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="#393939"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="32dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="16dp"
                    >

                    <TextView
                        android:id="@+id/Event_Rules_Heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Rules of the Event"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"
                        android:textSize="24sp"
                        />

                    <TextView
                        android:id="@+id/Event_Rules_Message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/Event_Rules_Heading"
                        android:text="1) Don't jdfs dfnskdjnfs dfsnjnos.\n\n2)Also no snddfns-ing."
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        />


                    <View
                        android:id="@+id/Login_Divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/Event_Rules_Message"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="#393939"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="32dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="16dp"
                    >

                    <TextView
                        android:id="@+id/Event_Poster_Heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Poster"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"
                        android:textSize="24sp"
                        />

                    <ImageView
                        android:id="@+id/Event_Poster_Message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/Event_Poster_Heading"
                        android:src="@mipmap/ic_launcher_white"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        />


                    <View
                        android:id="@+id/Login_Divider5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/Event_Poster_Message"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="#393939"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="32dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:cardCornerRadius="16dp"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="16dp"
                    >

                    <TextView
                        android:id="@+id/event_register_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Register"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"
                        android:textSize="24sp"
                        />

                    <TextView
                        android:id="@+id/event_register_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/event_register_heading"
                        android:text="Click here to register yourself in this event."
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        />

                    <Button
                        android:id="@+id/event_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/event_register_message"
                        android:background="#993200"
                        android:text="REGISTER"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="16dp"
                        />


                    <View
                        android:id="@+id/Login_Divider6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toBottomOf="@id/event_register"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="#393939"
                        android:layout_marginVertical="16dp"
                        android:layout_marginHorizontal="32dp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</androidx.constraintlayout.widget.ConstraintLayout>