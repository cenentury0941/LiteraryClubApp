<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.litfestapp.signup.SignUpType">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingHorizontal="32dp"
            android:paddingVertical="16dp"
            >

            <TextView
                android:id="@+id/Login_Sign_Up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Type of Account"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:textSize="24sp"
                android:fontFamily="monospace"
                />

            <TextView
                android:id="@+id/Login_Sign_Up_Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Login_Sign_Up"
                android:text="I am..."
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_marginTop="32dp"
                android:textSize="18sp"
                />


            <Button
                android:id="@+id/Login_Sign_Up_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#993200"
                android:text="SIGN UP"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/Login_Sign_Up_Type_Group"
                android:layout_marginTop="16dp"
                />


            <View
                android:id="@+id/Login_Divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/Login_Sign_Up_Button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="#393939"
                android:layout_marginVertical="32dp"
                android:layout_marginHorizontal="32dp"
                />

            <RadioGroup
                android:id="@+id/Login_Sign_Up_Type_Group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Login_Sign_Up_Message"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                 >

                <RadioButton
                    android:id="@+id/Login_Sign_Up_Type_Organiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="An Organiser"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/Login_Sign_Up_Type_Student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="A Student/Participant"
                    android:textSize="18sp" />
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>